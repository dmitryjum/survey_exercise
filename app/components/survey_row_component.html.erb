<%= turbo_frame_tag dom_id(@survey) do %>
  <li class="flex items-center justify-between py-2 border-b">
    <div>
      <span class="font-medium"><%= @survey.question %></span>
      <span class="ml-4 text-sm text-gray-500">
        Yes: <%= stats[:yes] %>%  |  No: <%= stats[:no] %>%
      </span>
    </div>

    <%= link_to "Answer",
          answer_survey_path(@survey),       # route defined below
          data:  { turbo_frame: dom_id(@survey) },
          class: "btn btn-sm btn-primary" %>
  </li>
<% end %>

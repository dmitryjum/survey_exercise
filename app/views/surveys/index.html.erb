<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="text-center mb-12">
      <div class="flex items-center justify-center gap-3 mb-4">
        <div class="p-3 bg-indigo-100 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <rect x="3" y="10" width="4" height="11" rx="1" />
            <rect x="9" y="3" width="4" height="18" rx="1" />
            <rect x="15" y="14" width="4" height="7" rx="1" />
          </svg>
        </div>
        <h1 class="text-4xl font-bold text-gray-900">Surveys</h1>
      </div>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Create and manage your surveys below. Get instant feedback with yes/no questions and track response
        statistics in real-time.
      </p>
    </div>

    <div class="bg-indigo-50/50 rounded-lg border-2 border-dashed border-indigo-200 mb-8">
      <div class="p-6">
        <div class="mb-4">
          <h2 class="text-xl font-semibold text-indigo-900 flex items-center gap-2 mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <line x1="12" y1="5" x2="12" y2="19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="5" y1="12" x2="19" y2="12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            Create a new survey
          </h2>
          <p class="text-sm text-indigo-700">
            Ask a yes/no question to gather quick feedback from your audience.
          </p>
        </div>
        <%= render "new_survey" %>
      </div>
    </div>

    <div id="survey_list" class="space-y-4">
      <% if @surveys_count.zero? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 text-center py-12">
          <div class="text-gray-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 mx-auto mb-4 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <rect x="3" y="10" width="4" height="11" rx="1" />
              <rect x="9" y="3" width="4" height="18" rx="1" />
              <rect x="15" y="14" width="4" height="7" rx="1" />
            </svg>
            <p class="text-lg font-medium mb-2">No surveys yet</p>
            <p class="text-sm">Create your first survey above to get started!</p>
          </div>
        </div>
      <% else %>
        <%= render SurveyRowComponent.with_collection(@surveys) %>
      <% end %>
    </div>

    <%= render SurveyStatsComponent.new(surveys_count: @surveys_count, response_count: @response_count) %>
  </div>
</div>
